header.header
    .header__wrapper
        .header__column
            a(href=routes.home) 
                //- i.fab.fa-youtube
                i.fas.fa-dove
                span.header__brand-name #{siteName}

        .header__column
            form.header__form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term", autocomplete="off")

        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else
                    li
                        a(href=`/videos${routes.upload}`) Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a(href=routes.logout) Log Out
    
