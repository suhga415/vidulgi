extends layouts/main
include mixins/videoBlock

block content
    .search__header
        i.fas.fa-search
        span  Searching for:  
        span.search-term #{searchingBy}
    .search-videos
        if videos.length === 0
            h5 No Videos Found
        each item in videos
            +videoBlock ({
                id: item.id,
                fileUrl: item.fileUrl,
                thumbnailUrl: item.thumbnailUrl,
                title: item.title,
                views: item.views,
                creator: item.creator.name,
                avatarUrl: item.creator.avatarUrl,
                createdAt: item.createdAt
            })