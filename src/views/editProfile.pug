extends layouts/main

block content
    .form-container
        form(action=`${routes.users}${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avater") Avatar
                input(type="file", id="avater", value=loggedUser.avatarUrl, name="avatarUrl", accept="image/*")
            label(for="name") Name
            input(type="text", value=loggedUser.name, name="name", required=true)
            label(for="email") Email
            input(type="email", value=loggedUser.email,name="email", required=true)
            input(type="submit", value="Submit Change")
