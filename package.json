{
  "name": "wetube",
  "version": "1.0.0",
  "description": "Cloning YouTube with VanillaJS and NodeJS",
  "main": "index.js",
  "author": "Gahyun Suh",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.2.0",
    "aws-sdk": "^2.826.0",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "body-parser": "^1.18.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "core-js": "^3.8.2",
    "css-loader": "^5.0.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-session": "^1.15.6",
    "helmet": "^3.15.0",
    "mini-css-extract-plugin": "^1.3.3",
    "moment": "^2.29.1",
    "mongoose": "^5.3.13",
    "mongoose-findorcreate": "^3.0.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-s3": "^2.9.0",
    "node-sass": "^4.14.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "postcss": "^8.2.2",
    "postcss-loader": "^4.1.0",
    "pug": "^2.0.3",
    "sass-loader": "^10.1.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore 'static'",
    "dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
    "copyAll": "cp -r src/static build && cp -r src/views build",
    "build:assets": "cd src && WEBPACK_ENV=production webpack && npm run copyAll",
    "build:server": "babel src --out-dir build --ignore 'src/static','src/assets','src/webpack.config.js'",
    "build": "npm run build:server && npm run build:assets",
    "prebuild": "rm -rf build",
    "start": "PRODUCTION=true node build/init.js",
    "prestart": "npm run build",
    "tunnel": "lt --port 4000"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2"
  }
}
